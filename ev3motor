import sys
sys.path.append("/home/tom")  # Adjust path if needed

from ev3motor import EV3Motor

ENC1 = 8
ENC2 = 7
IN1  = 18
IN2  = 13

motor = EV3Motor(ENC1, ENC2, IN1, IN2)

try:
    motor.reset_encoder()
    print("Moving motor 90 clicks...")
    motor.goto_degrees(90, kp=0.5)
finally:
    motor.stop()
